<Page
    x:Class="TodoApp.Views.TodoDetailsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:TodoApp.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:entities="using:TodoApp.Shared.Models.Entity"
    xmlns:local="using:TodoApp.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Page.Resources>
        <Style x:Key="DetailsButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="15" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        </Style>

        <Style TargetType="Flyout">
            <Setter Property="Placement" Value="Auto" />
        </Style>

        <Style TargetType="TimePicker">
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="Margin" Value="0,25,0,0" />
        </Style>

        <Style x:Key="SummaryGridStyle" TargetType="Grid">
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderBrush" Value="LightGray" />
            <Setter Property="BorderThickness" Value="1,0,1,1" />
            <Setter Property="Padding" Value="0,10,0,10" />
        </Style>

        <Style x:Key="SummaryStackPanelStyle" TargetType="StackPanel">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="Orientation" Value="Horizontal" />
        </Style>

        <converters:DateToStringConverter x:Key="DateToStringConverter" />
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <Grid>
            <StackPanel x:Name="AppTitleBar" Background="White" />
            <Button
                Background="Transparent"
                BorderThickness="0"
                Click="{x:Bind ViewModel.NavigateBack}">
                <FontIcon
                    Margin="0,1,0,0"
                    FontFamily="{StaticResource FluentUIGlyphs}"
                    Glyph="&#xE921;" />
            </Button>
        </Grid>

        <!--  To-do details  -->
        <ScrollViewer Grid.Row="1">
            <StackPanel>
                <Grid
                    Padding="15,20,15,20"
                    Background="White"
                    BorderBrush="LightGray"
                    BorderThickness="0,0,0,1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <CheckBox
                        MinWidth="0"
                        Padding="0"
                        Click="{x:Bind ViewModel.CheckTodo}"
                        CornerRadius="10"
                        IsChecked="{x:Bind ViewModel.Todo.IsCompleted}" />

                    <TextBlock
                        Grid.Column="1"
                        Margin="15,0,0,3"
                        VerticalAlignment="Center"
                        Style="{StaticResource SubtitleTextBlockStyle}"
                        Text="{x:Bind ViewModel.Todo.Name, Mode=TwoWay}"></TextBlock>

                    
                </Grid>

                <StackPanel
                    Margin="10,10,10,0"
                    Background="White"
                    BorderBrush="LightGray"
                    BorderThickness="1">
                    <TextBlock
                        Margin="15,5,0,5"
                        Style="{StaticResource SubtitleTextBlockStyle}"
                        Text="Manage" />
                    <ListView ItemsSource="{x:Bind ViewModel.SubTodos}" SelectionMode="None">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="entities:SubTodo">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <CheckBox
                                        MinWidth="0"
                                        Padding="0"
                                        CornerRadius="10"
                                        IsChecked="{x:Bind IsCompleted}" />

                                    <TextBlock
                                        Grid.Column="1"
                                        Margin="15,0,0,0"
                                        VerticalAlignment="Center"
                                        Text="{x:Bind Name}" />
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>

                

               

                <!--  To-do note  -->
                <Grid MinHeight="120" Margin="10">
                    <TextBox
                        AcceptsReturn="True"
                        Background="White"
                        BorderBrush="LightGray"
                        BorderThickness="1"
                        CornerRadius="0"
                        IsSpellCheckEnabled="True"
                        PlaceholderText="Add note"
                        SelectionHighlightColor="{StaticResource AppBackgroundBrush}"
                        Text="{x:Bind ViewModel.Todo.Note, Mode=TwoWay}"
                        TextChanged="TodoNoteTextBox_TextChanged"
                        TextWrapping="Wrap" />

                    <Button
                        Margin="0,0,10,10"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Click="SaveNoteButton_Click"
                        Style="{StaticResource AccentButtonStyle}">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <FontIcon
                                    x:Name="saveNoteGlyph"
                                    FontFamily="{StaticResource FluentUIGlyphs}"
                                    Glyph="&#xEB4A;" />
                                <TextBlock
                                    x:Name="saveNoteButtonText"
                                    Margin="10,0,0,0"
                                    Text="Save note" />
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
